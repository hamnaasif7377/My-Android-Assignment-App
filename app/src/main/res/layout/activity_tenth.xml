<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tenth"
    android:background="@color/pinkish">

    <ImageView
        android:id="@+id/mother"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/mother"
        android:layout_centerInParent="true">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mother ❤"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:id="@+id/mothertxt"
        android:layout_below="@+id/mother">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:12"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:id="@+id/calltime"
        android:layout_below="@+id/mothertxt">
    </TextView>
    <ImageView
        android:id="@+id/endcall"
        android:layout_width="100dp"
        android:layout_height="999dp"
        android:src="@drawable/callend"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/calltime"
        android:layout_marginTop="70dp">
    </ImageView>
    <ImageView
        android:id="@+id/txt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/txt"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/calltime"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp">
    </ImageView>
    <ImageView
        android:id="@+id/speaker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sound_on"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/calltime"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="300dp">
    </ImageView>



</RelativeLayout>